<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.comics.marvel.fragments.CharactersFragment"
        tools:layout="@layout/items_recycler_view">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.comics.marvel.fragments.CharacterDetailsFragment"
        tools:layout="@layout/details_layout">
        <action
            android:id="@+id/action_characterDetailsFragment_to_youtubeCharacterVideos"
            app:destination="@id/youtubeCharacterVideos" />
    </fragment>
    <fragment
        android:id="@+id/youtubeCharacterVideos"
        android:name="com.comics.marvel.fragments.YoutubeCharacterVideos" />
</navigation>